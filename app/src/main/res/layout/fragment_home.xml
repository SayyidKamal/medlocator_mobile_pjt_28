<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ui.home.HomeFragment" >


   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_margin="20dp"
       android:orientation="vertical"
       android:weightSum="10">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1.5"
           android:orientation="vertical">

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Hi Pharmacy,"
               android:textColor="@color/black"
               android:textSize="26dp"
               android:textStyle="bold" />

           <TextView
               android:id="@+id/text_home"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Hi Pharmacy,"
               android:textColor="@color/black"
               android:textSize="26dp"
               android:textStyle="bold"
               android:visibility="gone" />

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="5dp"
               android:text="What would you like to update today?"
               android:textColor="@color/black"
               android:textStyle="bold" />

       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_marginTop="3dp"
           android:layout_weight="3"
           android:layout_marginVertical="20dp"
           android:orientation="horizontal"
           android:weightSum="3">

           <androidx.cardview.widget.CardView
               onClick="@{()->viewModel.onMyButtonClicked()}"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_marginVertical="10dp"
               android:clickable="true"
               android:layout_weight="1.4"
               app:cardBackgroundColor="@color/white"
               app:cardCornerRadius="8dp"
               app:cardElevation="8dp">

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:background="@color/color_primary"
                   android:gravity="center"
                   android:padding="7dp"
                   android:text="Update Information"
                   android:textColor="@color/white"
                   android:textSize="24dp"
                   android:textStyle="bold" />

           </androidx.cardview.widget.CardView>

           <TextView
               android:layout_width="0dp"
               android:layout_height="0dp"
               android:layout_weight=".2"/>

           <androidx.cardview.widget.CardView
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_marginVertical="10dp"
               android:layout_weight="1.4"
               app:cardBackgroundColor="@color/white"
               app:cardCornerRadius="8dp"
               app:cardElevation="8dp">

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:background="@color/color_primary"
                   android:gravity="center"
                   android:padding="7dp"
                   android:text="Update Inventory"
                   android:textColor="@color/white"
                   android:textSize="24dp"
                   android:textStyle="bold" />

           </androidx.cardview.widget.CardView>
       </LinearLayout>



           <androidx.cardview.widget.CardView
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_marginVertical="20dp"
               android:layout_weight="2.5"
               android:weightSum="5"
               app:cardBackgroundColor="@color/color_primary"
               app:cardCornerRadius="12dp"
               app:cardElevation="8dp">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="horizontal"
                   android:weightSum="5">

                   <LinearLayout
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight="3.3">

                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:layout_gravity="center"
                           android:layout_marginLeft="20dp"
                           android:gravity="center_vertical"
                           android:orientation="vertical">

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="Latest information on COVID-19"
                               android:textColor="@color/white"
                               android:textSize="15dp"/>

                           <com.google.android.material.button.MaterialButton
                               android:layout_width="140dp"
                               android:layout_height="40dp"
                               android:textSize="13dp"
                               android:gravity="center"
                               android:layout_marginTop="20dp"
                               android:backgroundTint="@color/white"
                               android:text="Read more"
                               android:textAllCaps="false"
                               android:textColor="@color/color_primary"
                               app:cornerRadius="10dp"/>

                       </LinearLayout>

                   </LinearLayout>

                   <LinearLayout
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight="1.7">

                       <ImageView
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"

                           android:layout_marginHorizontal="10dp"
                           android:src="@drawable/pharmacy_workers_illustration"/>

                   </LinearLayout>


               </LinearLayout>

           </androidx.cardview.widget.CardView>


       <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_marginVertical="20dp"
           android:layout_weight="3"
           android:weightSum="5"
           app:cardBackgroundColor="@color/white"
           app:cardCornerRadius="8dp"
           app:cardElevation="8dp">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_marginHorizontal="10dp"
               android:orientation="vertical"
               android:weightSum="4">

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:textSize="18dp"
                   android:textColor="@color/black"
                   android:text="Review Inventory"/>


           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="horizontal"
               android:weightSum="3">

               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1">

                   <ImageView
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_margin="10dp"
                       android:src="@drawable/med_1"/>



               </LinearLayout>

               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1">

                   <ImageView
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_margin="20dp"
                       android:src="@drawable/med_2"/>

               </LinearLayout>

               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1">

                   <ImageView
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_margin="30dp"
                       android:src="@drawable/med_3"/>

               </LinearLayout>


           </LinearLayout>
           </LinearLayout>

       </androidx.cardview.widget.CardView>


   </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>