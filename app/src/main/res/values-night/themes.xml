<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MedLocator" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_95</item>
        <item name="colorPrimaryVariant">@color/teal_95</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_95</item>
        <item name="colorSecondaryVariant">@color/teal_95</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!--            Fonts-->
        <item name="android:fontFamily">@font/josefinsans_variablefont_wght</item>
        <item name="fontFamily">@font/josefinsans_variablefont_wght</item>
    </style>


    <!--  style is for the splash screen -->
    <style name="Theme.MedLocator.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>